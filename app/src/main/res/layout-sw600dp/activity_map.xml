<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fx_bg_start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- LEFT PANE: MAP -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <org.osmdroid.views.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/topContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_gravity="top|start"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="6dp">

                        <EditText
                            android:id="@+id/etSearch"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:hint="@string/map_search_hint"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:background="@drawable/shape_panel_strong"
                            android:textColor="@android:color/white"
                            android:drawableStart="@drawable/ic_search"
                            android:drawablePadding="10dp"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvDailyProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="0/5"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:background="@drawable/shape_panel_strong" />
                        <TextView
                            android:id="@+id/tvSyncState"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:paddingLeft="14dp"
                            android:paddingRight="14dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="@string/map_sync_online"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:background="@drawable/shape_panel_strong" />
                    </LinearLayout>

                    <HorizontalScrollView
                        android:id="@+id/filterBarContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:clipToPadding="false"
                        android:background="@drawable/shape_panel_strong"
                        android:scrollbars="none">
                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:singleLine="true"
                            app:chipSpacingHorizontal="8dp">
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipAll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:text="Svi"
                                android:checked="true" />
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipCulture"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:text="Kultura" />
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipFood"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:text="Restorani" />
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipNightlife"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:text="Noćni život" />
                        </com.google.android.material.chip.ChipGroup>
                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="20dp"
                app:srcCompat="@drawable/ic_user_profile"
                android:contentDescription="@string/open_profile"
                app:backgroundTint="@color/fx_neon_purple"
                app:tint="@android:color/white" />

            <View
                android:id="@+id/snackbarAnchor"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="bottom" />
        </FrameLayout>

        <!-- RIGHT PANE: List + Detail -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvListTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/map_list_recommended"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/map_empty_list"
                android:gravity="center"
                android:padding="24dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPlaceList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingBottom="8dp" />

            <FrameLayout
                android:id="@+id/detailContainer"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:background="?attr/colorSurface"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
