<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fx_bg_start">

    <!-- Map View -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top container with search + filters + status -->
    <LinearLayout
        android:id="@+id/topContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_gravity="top"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="6dp">

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:hint="@string/map_search_hint"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:background="@drawable/shape_panel_strong"
                android:textColor="@android:color/white"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="10dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tvDailyProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:padding="10dp"
                android:text="0/5"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/shape_panel_strong"
                android:contentDescription="Daily progress" />

            <TextView
                android:id="@+id/tvSyncState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/map_sync_online"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/shape_panel_strong"
                android:contentDescription="Sync status" />
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/filterBarContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:clipToPadding="false"
            android:background="@drawable/shape_panel_strong"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true"
                app:chipSpacingHorizontal="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:text="Svi"
                    android:checked="true"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCulture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:text="Kultura"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:text="Restorani"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipNightlife"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:text="Noćni život"/>
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Bottom sheet with behavior -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_gravity="bottom"
        android:layout_margin="8dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        android:backgroundTint="?attr/colorSurface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="14dp">

            <View
                android:id="@+id/sheetHandle"
                android:layout_width="48dp"
                android:layout_height="6dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_sheet_handle"
                android:contentDescription="Handle" />

            <TextView
                android:id="@+id/tvListTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/map_list_recommended"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingBottom="6dp" />

            <TextView
                android:id="@+id/tvEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/map_empty_list"
                android:gravity="center"
                android:paddingTop="40dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPlaceList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingBottom="8dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Profile FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/ic_user_profile"
        android:contentDescription="@string/open_profile"
        app:backgroundTint="@color/fx_neon_purple"
        app:tint="@android:color/white" />

    <!-- Limited Mode Snackbar Anchor -->
    <View
        android:id="@+id/snackbarAnchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
