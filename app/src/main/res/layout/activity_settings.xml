<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/settings_title" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/swAnalytics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_analytics"
            android:layout_marginTop="12dp" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/swMarketing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_marketing"
            android:layout_marginTop="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCopyFcm"
            style="@style/Widget.CityExplorer.Button.Tonal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_copy_fcm"
            android:layout_marginTop="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnForceSync"
            style="@style/Widget.CityExplorer.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_force_sync"
            android:layout_marginTop="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResetOnboarding"
            style="@style/Widget.CityExplorer.Button.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_reset_onboarding"
            android:layout_marginTop="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearLocal"
            style="@style/Widget.CityExplorer.Button.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_clear_local"
            android:layout_marginTop="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExportUser"
            style="@style/Widget.CityExplorer.Button.Tonal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_export_user"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
